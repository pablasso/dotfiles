[user]
  name = Juan Pablo Ortiz
  email = me@pablasso.com
[core]
	excludesfile = /Users/pablasso/.gitignore_global
	editor = nvim
[diff]
    tool = Kaleidoscope
[color]
    ui = true
[github]
    user = pablasso
[difftool "Kaleidoscope"]
    cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[difftool]
    prompt = false
[push]
    default = simple
[credential]
	helper = osxkeychain
